# 开发环境 - 后端 Dockerfile
FROM python:3.11-slim

# 设置工作目录
WORKDIR /app

# 设置环境变量
ENV PYTHONPATH=/app
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# 使用阿里云镜像源
RUN echo "deb https://mirrors.aliyun.com/debian/ bookworm main non-free non-free-firmware contrib" > /etc/apt/sources.list && \
    echo "deb https://mirrors.aliyun.com/debian/ bookworm-updates main non-free non-free-firmware contrib" >> /etc/apt/sources.list && \
    echo "deb https://mirrors.aliyun.com/debian-security bookworm-security main non-free non-free-firmware contrib" >> /etc/apt/sources.list

# 安装基础工具
RUN apt-get update && apt-get install -y --no-install-recommends ca-certificates curl git \
 && rm -rf /var/lib/apt/lists/*

# 安装完整的系统依赖
RUN apt-get update && apt-get install -y --fix-missing --allow-unauthenticated \
    gcc \
    g++ \
    libpq-dev \
    wget \
    gnupg \
    fonts-unifont \
    fonts-liberation \
    libxcb1 \
    libxkbcommon0 \
    libx11-6 \
    libxext6 \
    libxfixes3 \
    libxrandr2 \
    libatspi2.0-0 \
    libxcomposite1 \
    libxdamage1 \
    libgbm1 \
    libpango-1.0-0 \
    libcairo2 \
    libasound2 \
    libdrm2 \
    libxss1 \
    libgtk-3-0 \
    libnss3 \
    libnspr4 \
    dbus \
    procps \
    || true

# 复制requirements.txt
COPY requirements.txt .

# Python（使用国内镜像源）
RUN pip install --no-cache-dir -i https://pypi.tuna.tsinghua.edu.cn/simple -r requirements.txt

# 创建非root用户
RUN useradd -m -u 1000 appuser

# 安装Playwright浏览器（开发环境）- 以appuser身份安装
USER appuser
RUN playwright install chromium

# 切换回root用户设置权限
USER root
# 设置所有权
RUN chown -R appuser:appuser /app

# 切换用户
USER appuser

# 暴露端口
EXPOSE 8000

# 启动命令（开发模式）- 直接启动uvicorn
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
